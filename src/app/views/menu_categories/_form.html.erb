<%= simple_form_for(@menu_category) do |f| %>
<% if request.path_info != new_menu_category_path%>
<%=f.input :id, label: "id", readonly: true%>
<%end%>
<%=f.input :name, label: "メニューカテゴリ名"%>
<%=f.input :department_id, as: :select, collection: @departments.map{|department| [department.name, department.id]}, label: "部門名"%>
<%= f.button :submit, class: 'btn btn-primary'%>
<% if request.path_info != new_menu_category_path%>
<%= link_to '削除', menu_category_path(@menu_category),method: :delete, class: 'btn btn-danger' %>
<%end%>
<%= link_to '戻る', menu_categories_path, class: 'btn' %>
<% end %>