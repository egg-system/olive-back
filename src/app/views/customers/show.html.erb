<% breadcrumb :root  %>
<p>基本情報</p>
<div class="customer-show-heading list-group list-group-horizontal">
  <%= link_to "経過記録一覧へ", { anchor: "lower-list-observations" }, class: "list-group-item list-group-item-info list-group-item-action" %>
  <%= link_to "経過記録登録へ", new_observation_path(customer_id: @customer.id), class: "list-group-item list-group-item-info list-group-item-action" %>
  <%= link_to "予約一覧へ", { anchor: "lower-list-reservations" }, class: "list-group-item list-group-item-info list-group-item-action" %>
  <%= link_to "予約登録へ", new_reservation_path(customer_id: @customer.id), class: "list-group-item list-group-item-info list-group-item-action" %>
</div>
<%= render "form" %>
<br>
<hr>
<span id="lower-list-observations" class="lower-list-title">経過記録一覧</span>
<div class="lower-list-details">
    <%= render 'observations/list' %>
</div>

<span id="lower-list-reservations" class="lower-list-title">予約一覧</span>
<div class="lower-list-details">
    <%= render 'reservations/list', is_shown_customer_name: false %>
</div>
